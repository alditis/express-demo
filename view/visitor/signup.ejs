<% include ../general/header %>
<body>
    <div class="form mt-5 mx-auto">
        <% include ../general/logo %>
        <% include ../general/msg %>

        <form method="post" action="/signup">
            <input type="text" id="username" name="username" size="35" maxlength="40" placeholder="<%= i18n._username %>" value="alditis" />
            <input type="text" id="email" name="email" size="35" maxlength="40" placeholder="<%= i18n._email %>" value="alditis@gmail.com"/>
            <input type="password" id="password" name="password" size="15" maxlength="20" placeholder="<%= i18n._password %>" value="123456"/>
            <p class="note mb-2"><%- i18n.noteTermsConditions %></p>
            <input type="submit" id="send" value="<%= i18n._createAccount %>">
        </form>

        <div class="max-auto text-center clearfix mt-3">
            <span class="note"><%= i18n._loginWith %></span>
            <a href="/auth/facebook" class="btn btn-social-icon btn-facebook"><span class="fa fa-facebook"></span></a>
            <a href="/auth/google" class="btn btn-social-icon btn-google"><span class="fa fa-google"></span></a>
            <a href="/auth/twitter" class="btn btn-social-icon btn-twitter"><span class="fa fa-twitter"></span></a>
        </div>

        <div class="max-auto text-center clearfix mt-3">
            <a class="float-left" href="/login"><%= i18n._login %></a>
            <a class="float-right" href="/forgot"><%= i18n._forgotPassword %></a>
        </div>
    </div>
    <% include ../general/lang %>
    <% include ../general/footer %>

    <script>
        $('#username').focus();
        $('#send').prop('disabled', true);

        $('#username, #email, #password').keyup(function(){
            var isDisabled = ($('#username').val() == '' || $('#password').val() == '' || $('#email').val() == '');
            $('#send').prop('disabled', isDisabled);
        });
    </script>
</body>
</html>